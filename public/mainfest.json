{
    "name": "React-Vite-CRX",
    "version": "1.0",
    "description": "基于 React + Vite 实现的Chrome插件项目",
    "manifest_version": 3,
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "css": ["content.css"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ],
    "action": {
      "default_popup": "index.html",
      "default_icon": {
        "16": "/images/app.png",
        "32": "/images/app.png",
        "48": "/images/app.png",
        "128": "/images/app.png"
      },
      "default_title": "React-Vite-CRX"
    },
    "icons": {
      "16": "/images/app.png",
      "32": "/images/app.png",
      "48": "/images/app.png",
      "128": "/images/app.png"
    }
  }